<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dip"/>
            <gradient
                android:startColor="@color/color_050"
                android:centerColor="@color/color_050"
                android:endColor="@color/color_050"
                android:centerY="0.5"
                android:angle="270"
                />

            <!--android:startColor="#0e9d9e9d"-->
            <!--android:centerColor="#0e5a5d5a"-->
            <!--android:endColor="#0e747674"-->

        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dip"/>
                <gradient
                    android:startColor="@color/color_800_b0"
                    android:centerColor="@color/color_999_b0"
                    android:endColor="@color/color_800_b0"
                    android:centerY="0.5"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dip"/>
                <gradient
                    android:startColor="@color/color_800_ff"
                    android:centerColor="@color/color_999_ff"
                    android:endColor="@color/color_800_ff"
                    android:centerY="0.5"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>

